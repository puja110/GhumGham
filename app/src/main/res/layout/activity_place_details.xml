<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popular_places_list_Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="3dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    android:clickable="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placeListDetailImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="fitXY"
            android:src="@drawable/image"
            android:padding="5dp"/>

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/placeListName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Swayambunath"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/placeListdescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:text=", Historical Temple of Nepal , Historical Temple of Nepal, Historical Temple of Nepal, Historical Temple of Nepal, Historical Temple of Nepal Historical Temple of Nepal. Historical Temple of Nepal, Historical Temple of Nepal..."
                android:paddingLeft="15dp"
                android:paddingBottom="@dimen/_5sdp"/>

            <Button
                android:id="@+id/reviewBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Reviews"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>